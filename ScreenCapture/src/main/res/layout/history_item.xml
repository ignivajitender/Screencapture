
    <android.support.v7.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:cardView="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        cardView:cardElevation="10dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/mainView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/iv_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/iv_duration"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/iv_main">
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_75"
                android:src="@drawable/ic_launcher"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/iv_thumb"
                android:layout_alignParentBottom="true" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_marginTop="10dp"

                android:layout_toRightOf="@+id/iv_thumb">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="left"
                    android:id="@+id/edit_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:layout_alignParentTop="true"
                        android:id="@+id/iv_name"
                        android:layout_toLeftOf="@+id/iv_edit_name"


                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:id="@+id/iv_edit_name"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@android:drawable/ic_menu_edit"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/edit_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desc."
                        android:layout_below="@+id/iv_name"
                        android:id="@+id/iv_desc"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/iv_edit_desc"
                        android:src="@android:drawable/ic_menu_edit"/>
                </LinearLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/iv_rightbar"
               >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deleted"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dp_20"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/iv_delete"/>
            </RelativeLayout>
            </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_alignParentBottom="true"
                >

            <TextView
                android:background="@drawable/btn_background"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:text="Delete"
                android:textSize="@dimen/dp_20"
                android:gravity="center"
                android:id="@+id/delete"
                android:textColor="@color/white"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <TextView
                android:background="@drawable/btn_background"

                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:text="Share"
                android:textSize="@dimen/dp_20"
                android:gravity="center"
                android:id="@+id/share"
                android:textColor="@color/white"/>
        </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
